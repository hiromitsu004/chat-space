.side-bar
  .side-bar__top-items
    .side-bar__top-items__side-box
      .side-bar__top-items__side-box__name
        = current_user.name
      .side-bar__top-items__side-box__icons
        %ul.Leftheader
          %li.Leftheader__iconList
            = link_to new_group_path do
              = icon('fas', 'edit')
          %li.Leftheader__iconList
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog')

  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__name
        = link_to '#' do
          .side-bar__group__name__nameList
            = group.name
          .side-bar__group__name__message 
            メッセージはまだありません